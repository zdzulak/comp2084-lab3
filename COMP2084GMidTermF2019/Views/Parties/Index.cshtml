@model IEnumerable<COMP2084GMidTermF2019.Models.Party>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="~/images/@Html.DisplayFor(modelItem => item.Logo)">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PartyId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PartyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PartyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
